<div class="container">

    <div class="text-center m-5">
        <hr />
        <h1>
           Formulario de Contacto
        </h1>
        <hr />
    </div>

<div class="row">   
    <form action="./contacto" method="post">
        <div class="mb-3 row">
            <label for="nombre" class="col-sm-2 col-form-label" >nombre:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="producto" name="nombre" placeholder="Nombre" />
            </div>
        </div>
        <div class="mb-3 row">
            <label for="email" class="col-sm-2 col-form-label" >email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="precio" name="email"placeholder="Email"/>
            </div>
        </div>
        <div class="mb-3 text-center">
            <input type="submit" class="button btn btn-success w-50 p-2" value="Enviar">
        </div> 
        
        <div class="text-center">
            <h2 class="text-danger">
                {{ validacion }}
            </h2>
        </div>
    </form>
</div>
</div>
